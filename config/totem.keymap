#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>

#define BASE 0
#define NAV  1
#define SYM  2
#define ADJ  3
#define TVP1 4
#define TVP2 5

&mt {
    quick-tap-ms = <100>;
    global-quick-tap;
    flavor = "tap-preferred";
    tapping-term-ms = <170>;
};

/ {
    combos {
        compatible = "zmk,combos";

        LS_Shift {
            bindings = <&sk LEFT_SHIFT>;
            key-positions = <13 24>;
        };

        LS_Command {
            bindings = <&sk LEFT_COMMAND>;
            key-positions = <12 23>;
        };

        LS_Option {
            bindings = <&sk LEFT_ALT>;
            key-positions = <11 22>;
        };

        LS_Ctrl {
            bindings = <&sk LEFT_CONTROL>;
            key-positions = <21 10>;
        };

        RS_Shift {
            bindings = <&sk LEFT_SHIFT>;
            key-positions = <16 27>;
        };

        RS_Command {
            bindings = <&sk LEFT_COMMAND>;
            key-positions = <17 28>;
        };

        RS_Option {
            bindings = <&sk LEFT_ALT>;
            key-positions = <18 29>;
        };

        RS_Ctrl {
            bindings = <&sk LEFT_CONTROL>;
            key-positions = <30 19>;
        };

        Copy {
            bindings = <&kp LG(C)>;
            key-positions = <22 23>;
        };

        Paste {
            bindings = <&kp LG(V)>;
            key-positions = <23 24>;
        };

        Cut {
            bindings = <&kp LG(X)>;
            key-positions = <22 23 24>;
        };

        CapsLock {
            bindings = <&kp CAPSLOCK>;
            key-positions = <11 12 13>;
        };

        Hyper {
            bindings = <&sk LS(LA(LC(LEFT_GUI)))>;
            key-positions = <20 31>;
        };

        Smileys {
            bindings = <&kp LC(LG(SPACE))>;
            key-positions = <28 29>;
        };

        Spotlight {
            bindings = <&kp LG(SPACE)>;
            key-positions = <28 27>;
        };

        PwdMngr {
            bindings = <&kp LG(LS(SPACE))>;
            key-positions = <28 27 29>;
        };
    };

    macros {
        gif: gif {
            label = "giphy";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LSHFT>,
                <&macro_tap>,
                <&kp N2>,
                <&macro_release>,
                <&kp LSHFT>,
                <&macro_tap>,
                <&kp G &kp I &kp F>;
        };
    };

    behaviors {
        dot: dot {
            compatible = "zmk,behavior-mod-morph";
            label = "DOT";
            bindings = <&kp PERIOD>, <&kp COLON>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT)>;
        };

        colon: colon {
            compatible = "zmk,behavior-mod-morph";
            label = "COLON";
            bindings = <&kp COMMA>, <&kp SEMICOLON>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT)>;
        };

        questionmark: questionmark {
            compatible = "zmk,behavior-mod-morph";
            label = "QUESTIONMARK";
            bindings = <&kp QUESTION>, <&kp EXCLAMATION>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT)>;
        };

        HoldTap: HoldTap {
            compatible = "zmk,behavior-hold-tap";
            label = "HOLDTAP";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };

        Slash: Slash {
            compatible = "zmk,behavior-mod-morph";
            label = "SLASH";
            bindings = <&kp SLASH>, <&kp BACKSLASH>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT)>;
        };

        HoldTapDot: HoldTapDot {
            compatible = "zmk,behavior-hold-tap";
            label = "HOLDTAPDOT";
            bindings = <&kp>, <&dot>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };

        HoldTapColon: HoldTapColon {
            compatible = "zmk,behavior-hold-tap";
            label = "HOLDTAPCOLON";
            bindings = <&kp>, <&colon>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };

        HoldTapQuestion: HoldTapQuestion {
            compatible = "zmk,behavior-hold-tap";
            label = "HOLDTAPQUESTION";
            bindings = <&kp>, <&questionmark>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        // ▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄

        Colemak-DH {
            // ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓

            label = "BASE";

            // ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
            //             ┏━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┓   ┏━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┓
            //             ┃     Q     ┃     W     ┃     F     ┃     P     ┃     G     ┃   ┃     J     ┃     L     ┃     U     ┃     Y     ┃     ;     ┃
            //             ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫
            //             ┃     A     ┃     R     ┃     S     ┃     T     ┃     D     ┃   ┃     H     ┃     N     ┃     E     ┃     I     ┃     O     ┃
            // ┏━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┓
            // ┃     Q     ┃     Z     ┃     X     ┃     C     ┃     V     ┃     B     ┃   ┃     K     ┃     M     ┃     ,     ┃     .     ┃     /     ┃     \     ┃
            // ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛
            //                                     ┃    DEL    ┃    TAB    ┃    SPC    ┃   ┃   ENTER   ┃           ┃   BSPC    ┃
            //                                     ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛   ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛

            bindings = <
                            &kp Q             &kp W                &kp F                &kp P                  &kp B             &kp J        &kp L                  &kp U                     &kp Y                   &kp APOSTROPHE
                            &kp A             &kp R                &kp S                &kp T                  &kp G             &kp M        &kp N                  &kp E                     &kp I                   &kp O
&HoldTap LS(LA(LCTRL)) TAB  &HoldTap RCTRL Z  &HoldTap LEFT_ALT X  &HoldTap LEFT_GUI C  &HoldTap LEFT_SHIFT D  &kp V             &kp K        &HoldTap LEFT_SHIFT H  &HoldTapColon LEFT_GUI 0  &HoldTapDot LEFT_ALT 0  &HoldTapQuestion LCTRL 0  &HoldTap LS(LA(RCTRL)) TAB
                                                                   &lt 4 ESCAPE         &lt 1 SPACE            &sk LEFT_SHIFT    &lt 3 ENTER  &lt 2 BACKSPACE        &lt 1 ESCAPE
            >;
        };

        Navigation {
            bindings = <
        &trans  &kp HOME  &kp UP_ARROW  &kp END    &trans    &trans  &kp HOME  &kp UP_ARROW  &kp END    &trans
        &trans  &kp LEFT  &kp DOWN      &kp RIGHT  &trans    &trans  &kp LEFT  &kp DOWN      &kp RIGHT  &trans
&trans  &trans  &trans    &trans        &trans     &trans    &trans  &trans    &trans        &trans     &trans  &trans
                          &trans        &trans     &trans    &trans  &trans    &trans
            >;

            label = "NAV";
        };

        Numbers {
            bindings = <
        &kp LEFT_PARENTHESIS  &kp KP_NUMBER_7  &kp KP_NUMBER_8  &kp KP_NUMBER_9  &kp RIGHT_PARENTHESIS    &trans  &trans  &trans  &trans  &trans
        &kp MINUS             &kp KP_NUMBER_4  &kp KP_NUMBER_5  &kp KP_NUMBER_6  &kp PLUS                 &trans  &trans  &trans  &trans  &trans
&trans  &kp SLASH             &kp KP_NUMBER_1  &kp KP_NUMBER_2  &kp KP_NUMBER_3  &kp ASTERISK             &trans  &trans  &trans  &trans  &trans  &trans
                                               &kp COMMA        &kp KP_NUMBER_0  &kp KP_DOT               &trans  &trans  &trans
            >;

            label = "NUM";
        };

        Symbol {
            bindings = <
        &kp GRAVE  &kp LESS_THAN  &kp GREATER_THAN  &kp MINUS          &kp PIPE         &kp CARET    &kp LEFT_BRACE        &kp RIGHT_BRACE        &kp DOLLAR  &kp SQT
        &trans     &kp ASTERISK   &Slash            &kp EQUAL          &kp AMPERSAND    &kp HASH     &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &none       &trans
&trans  &kp TILDE  &kp PLUS       &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp PERCENT      &kp AT_SIGN  &kp COLON             &colon                 &dot        &questionmark  &trans
                                  &trans            &trans             &trans           &trans       &trans                &trans
            >;

            label = "SYM";
        };

        Utility {
            bindings = <
        &trans  &kp C_PREVIOUS     &kp K_MUTE        &kp C_NEXT       &trans    &trans  &kp C_PREV    &kp K_MUTE        &kp C_NEXT       &trans
        &trans  &kp C_VOLUME_DOWN  &kp C_PLAY_PAUSE  &kp C_VOLUME_UP  &trans    &trans  &kp C_VOL_DN  &kp C_PLAY_PAUSE  &kp C_VOLUME_UP  &trans
&trans  &trans  &trans             &trans            &trans           &trans    &trans  &trans        &trans            &trans           &trans  &trans
                                   &trans            &trans           &trans    &trans  &trans        &trans
            >;

            label = "UTIL";
        };

        adjust_layer {
            // ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓

            label = "ADJ";

            // ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
            //             ┏━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┓   ┏━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┓
            //             ┃   RESET   ┃ BT CLEAR  ┃  OUT TOG  ┃           ┃           ┃   ┃           ┃    F7     ┃    F8     ┃    F9     ┃    F12    ┃
            //             ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫
            //             ┃ BOOTLOAD  ┃ BT NEXT   ┃           ┃           ┃           ┃   ┃           ┃    F4     ┃    F5     ┃    F6     ┃    F11    ┃
            // ┏━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┓
            // ┃           ┃           ┃ BT PREV   ┃           ┃           ┃           ┃   ┃           ┃    F1     ┃    F2     ┃    F3     ┃    F10    ┃           ┃
            // ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛
            //                                     ┃           ┃           ┃           ┃   ┃           ┃           ┃           ┃
            //                                     ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛   ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛

            bindings = <
        &sys_reset   &bt BT_CLR  &out OUT_TOG  &trans  &trans    &trans  &kp F7  &kp F8  &kp F9  &kp F12
        &bootloader  &bt BT_NXT  &trans        &trans  &trans    &trans  &kp F4  &kp F5  &kp F6  &kp F11
&trans  &trans       &bt BT_PRV  &trans        &trans  &trans    &trans  &kp F1  &kp F2  &kp F3  &kp F10  &trans
                                 &trans        &trans  &trans    &trans  &trans  &trans
            >;
        };

        tvp1_layer {
            // ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓

            label = "TVP 1";

            // ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
            //             ┏━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┓   ┏━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┳━━━━━━━━━━━┓
            //             ┃ NEXT FILE ┃ MARK IN   ┃ ROTATE    ┃ MARK OUT  ┃ SHOW SNAP ┃   ┃           ┃           ┃           ┃           ┃           ┃
            //             ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫   ┣━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━╋━━━━━━━━━━━┫
